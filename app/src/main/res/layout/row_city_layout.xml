<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#22666666">
<ImageView
    android:id="@+id/im_city_image"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:scaleType="fitXY"
    android:src="@drawable/cairo"
    />

    <TextView
        android:id="@+id/tx_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-40dp"
        android:text="Cairo"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tx_city_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#831325ec"
        android:text="Egypt's capital with Egyption Museum artifacts, plus the Pyramids of Giza G Great Sphinx monument"/>
</LinearLayout>
